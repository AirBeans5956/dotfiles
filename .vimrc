set fenc=utf-8
set autoread
set showcmd

set number
set cursorline
set virtualedit=onemore
set smartindent
set showmatch
set tabstop=2
set softtabstop=2
set shiftwidth=2
set laststatus=2
set wildmode=list:longest
nnoremap j gj
nnoremap k gk
syntax enable

set diffopt=internal,filler,algorithm:histogram,indent-heuristic
set backspace=indent,eol,start
set nowrap

set expandtab
set ignorecase
set smartcase
set incsearch
set wrapscan
set hlsearch
set nohls
